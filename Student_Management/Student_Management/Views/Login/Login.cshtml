*@


@{
     ViewData["Title"] = "Home Page";

    <div class="text-center">
        <h4 style="color: red">@ViewBag.Message</h4>

        <h2>Login Form</h2>

        <form asp-controller="Login" asp-action="Login" method="post">
            <input name="email" type="email" placeholder="Enter your Email" required="required" /><br><br>
            <input name="pass" type="password" placeholder="Enter your Password" required="required" /><br><br>
            <input type="submit" value="Login">
        </form>

    </div>


}
